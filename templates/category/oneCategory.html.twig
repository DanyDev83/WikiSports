{% extends 'base.html.twig' %}

{% block title %}{{ category.name }} - {% endblock %}

{% block body %}
        <main id="oneCategory" class="container">
            <h2 class="row justify-content-center pt-5 pb-3">Sports {{ category.name }}</h2>
            <p class="categ-description row justify-content-center mb-5">{{ category.description }}</p>
            <ul class="row justify-content-between">
                {% for article in articles %}
                    <li class="card col-3 px-0 mx-5 mb-5">
                        <div class="card-header titleHome pb-0" width="100%">
                            <h3><a class="row justify-content-center text-decoration-none text-dark"
                                   href="{{ path('app_article', {'id': article.id }) }}">{{ article.title }}</a></h3>
                        </div>
                        <div class="card-body px-0 py-0">
                            <img src="{{ article.urlPicture }}" class="imgCard mb-2" alt="" width="100%">
                            <p class="px-2">{{ article.content|u.truncate(100) }}[...]</p>
                        </div>
                    </li>
                {% endfor %}
            </ul>
        </main>
{% endblock %}
